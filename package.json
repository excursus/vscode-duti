{
    "name": "duti-language",
    "displayName": "duti Config Syntax",
    "description": "Syntax highlighting for duti configuration files.",
    "version": "0.1.2",
    "engines": {
        "vscode": "^1.47.0"
    },
    "icon": "images/duti-icon-512x512.png",
    "publisher": "excursus",
    "author": {
        "name": "excursus"
    },
    "galleryBanner": {
        "color": "#0AD5FC",
        "theme": "light"
    },
    "license": "MIT License",
    "bugs": {
        "url": "https://github.com/excursus/vscode-duti/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/excursus/vscode-duti"
    },
    "categories": [
        "Language Packs"
    ],
    "contributes": {
        "languages": [
            {
                "id": "duti",
                "extensions": [
                    ".duti"
                ]
            }
        ],
        "grammars": [
            {
                "language": "duti",
                "scopeName": "source.duti",
                "path": "./syntaxes/duti.tmGrammar.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.47.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^10.2.0",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}